    <script>
      async function allStories(){
        `
        Get all stories from API and add their details in a col-md-4 tab and add to "row" class in bootstrap        
        `
        let token = localStorage.getItem("token")
        let result = await fetch("/stories", {
            method: "POST",
            headers:{
                "Content-type": "application/json",
                'Authorization': "Bearer " + token
            }   
        })
      
        let data = await result.json()

        console.log("stories = ", data)

        const allStory = document.getElementById("allStories")

        for (let story in data){
          let div = document.createElement("div")
          div.setAttribute("class","col-md-4")
          
          let createdAt = ""

          if (data[story]["createdAt"]!=null){
            createdAt = data[story]["createdAt"].slice(0,10)
          }

          let elem = `
            <div class="card mb-4 box-shadow">
              <img class="card-img-top" alt="Thumbnail [100%x225]" style="height: 225px; width: 100%; display: block;" src="${data[story]["titleImage"]}" data-holder-rendered="true">
              <div class="card-body">
                <p class="card-text">
                  ${data[story]["description"]}...
                </p>
                <div class="d-flex justify-content-between align-items-center">
                  <a href="/story/${data[story]["title"]}">
                    ${data[story]["title"]}
                  </a>
                  <small class="text-muted">${data[story]["author"]}</small>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted">Created at - ${createdAt}</small>
                </div>
              </div>
            </div>
          `
          div.innerHTML = elem
          allStory.append(div)
        }

        return data
      }
      allStories();

      async function newStory(){
        let token = localStorage.getItem("token")

        if (document.getElementById("story_name").value==""){
          alert("Please Enter a Story Name First")
          return null
        }

        let body = JSON.stringify({
          'title': document.getElementById("story_name").value
        })

        let result = await fetch("/newStory", {
            method: "POST",
            headers:{
                "Content-type": "application/json",
                'Authorization': "Bearer " + token
            },
            body: body
        })
      
        let data = await result.json()

        console.log("stories = ", data)

        window.location.href = `/story/${data.title}`
      
        return data
      }
